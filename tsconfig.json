{
  "compilerOptions": {
    "lib": ["es5"],
    "removeComments": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": ["*/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
